[DATA BASE CONNECTION]

# Connection details used only on the server. Do not prefix them with
# NEXT_PUBLIC_ to avoid exposing them to the client.
SERVER_URL=
DB_NAME=
DB_USER=
DB_PASSWORD=
API_URL=

[LOGGING]
# Log level for the application logger
LOG_LEVEL=info


[PAYMENTS]
# Toggle to enable Stripe Checkout on the server. When not 'true', WhatsApp flow is used.
ENABLE_STRIPE_CHECKOUT=
# Secret API key from your Stripe dashboard (server-only)
STRIPE_SECRET_KEY=
# Publishable key for client-side Stripe SDK (if you later add it)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
# Currency for Stripe Checkout (e.g. usd, cop, eur)
NEXT_PUBLIC_STRIPE_CURRENCY=
# Client-side toggle to show correct CTA label. Should mirror ENABLE_STRIPE_CHECKOUT.
NEXT_PUBLIC_ENABLE_STRIPE=

# Optional tax rate used for UI estimation on checkout page (0 to disable)
NEXT_PUBLIC_TAX_RATE=

[APP]
# Public base URL used by server routes when constructing absolute URLs
NEXT_PUBLIC_BASE_URL=
# WhatsApp number to receive orders (digits only, with country code). If not set, defaults to 573222202887.
WHATSAPP_NUMBER=
NEXT_PUBLIC_WHATSAPP_NUMBER=
